<div class="max-w-sm rounded overflow-hidden shadow-lg bg-blue-400 p-10">

  <div class="container">
    <div class="flex items-center">
      <form action="/tasks" method="post" class="w-full max-w-lg">
        <label for="description" class="block mb-2">Add a task to your list:</label>
        <div>
          <input id="description" name="task[description]" required class="w-full px-3 py-2 border rounded-md mb-4"></input>
        </div>
        <div>
          <button class="bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded">
            Add task
          </button>
        </div>
      </form>
    </div>
  </div>

  <div>
        <div class="divide-y">
            <h1 class="text-xl mt-4">My tasks</h1>
        
            <ul>
            <% @tasks.each do |task| %>
            <li class="break-all">
                <%= task.description %>
            </li>
            <% end %>
            </ul>
        </div>
  </div>
</div>
