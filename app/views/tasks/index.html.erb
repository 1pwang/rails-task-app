<h2>Add Task</h2>
<form action="/tasks" method="post">
  <!-- CSRF Token -->
  <%= csrf_meta_tags %>

  <label for="description">Description:</label><br>
  <textarea id="description" name="task[description]" required></textarea><br><br>

  <input type="submit" value="Add Task">
</form>


<h1>Tasks</h1>

<ul>
    <% @tasks.each do |task| %>
        <li>
            <%= task.description %>
        </li>
    <% end %>
</ul>
